.container.container-fluid
  .row
    %h1
      Welcome to Calorie Tracker
  .row
    %form
      .input-append.clearfix#fromFilter
        .col-sm-8#from
          %span.add-on
            %i{'data-time-icon' => 'icon-time', 'data-date-icon' => 'icon-calendar'}
      .input-append.clearfix#toFilter
        .col-sm-8#to
          %span.add-on
            %i{'data-time-icon' => 'icon-time', 'data-date-icon' => 'icon-calendar'}


    = react_component 'FilterableMealTable', {meals: @meals.as_json(only: [:id, :name, :notes, :consumed_at, :amount_of_calories])}
    .controls.pull-right
      = link_to 'Add new Meal', new_meal_path, class: 'btn btn-success'
